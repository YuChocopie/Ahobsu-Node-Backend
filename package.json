{
  "name": "ahubsu-node",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "env TZ='Asia/Seoul' nodemon --watch ./ --delay 1 --exec 'ts-node' ./bin/www.ts",
    "build": "rm -rf ./dist && npx webpack",
    "deploy": "git pull origin dev && npm install && npm run build && pm2 kill && env TZ='Asia/Seoul' pm2 start ecosystem.config.js",
    "test": "NODE_ENV=test jest __test__/*.test.js --forceExit",
    "start:test": "NODE_ENV=test env TZ='Asia/Seoul' nodemon ./bin/www.js",
    "build:tsc": "rm -rf ./dist && tsc",
    "deploy:ts": "git pull origin dev && npm install && pm2 kill && env TZ='Asia/Seoul' pm2 start ts-node -- -P tsconfig.json ./bin/www.ts",
    "test:co": "NODE_ENV=test jest __test__/*.test.js --forceExit --coverage"
  },
  "dependencies": {
    "aws-sdk": "^2.595.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "formidable": "^1.2.1",
    "greenlock-express": "^3.1.1",
    "http-errors": "~1.6.3",
    "husky": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "morgan": "~1.9.1",
    "mysql2": "^2.0.2",
    "nodemon": "^2.0.2",
    "pm2": "^4.2.1",
    "redirect-https": "^1.3.0",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.5.1",
    "sqlite3": "^4.1.1",
    "swagger-ui-express": "^4.1.2",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "webpack": "^4.41.6",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.2",
    "@types/http-errors": "^1.6.3",
    "@types/morgan": "^1.7.37",
    "@types/swagger-ui-express": "^4.1.1",
    "clean-webpack-plugin": "^3.0.0",
    "file-loader": "^5.0.2",
    "jest": "^24.9.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.6.2",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  }
}
