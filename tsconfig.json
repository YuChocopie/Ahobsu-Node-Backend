// tsconfig.json
{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2016"],
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true
  },
  "exclude": ["node_modules", "dist"]
}
